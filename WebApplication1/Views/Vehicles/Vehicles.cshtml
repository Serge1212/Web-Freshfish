@model IEnumerable<WebApplication1.Models.Vehicles>
@{ ViewData["Title"] = "Vehicles"; }
<link rel="stylesheet" href="~/css/StyleDatabase.css" />
<div>
    <div class="Tools_conteiner_block">
        <div>
            <div class="dropdown-el">
                <input type="radio" name="sortType" class="comboboxItem" value="Model" checked="checked" id="sort-relevance"><label class="s1" for="sort-relevance">Mpdel</label>
                <input type="radio" name="sortType" class="comboboxItem" value="Mark" id="sort-relevance1"><label for="sort-relevance1">Mark</label>
                <input type="radio" name="sortType" class="comboboxItem" value="ManufactureDate" id="sort-relevance2"><label for="sort-relevance2">Manufacture date</label>
                <input type="radio" name="sortType" class="comboboxItem" value="Mileage" id="sort-relevance3"><label for="sort-relevance3">Mileage</label>
                <input type="radio" name="sortType" class="comboboxItem" value="FuelConsumption" id="sort-relevance4"><label for="sort-relevance4">Fuel consumption</label>
                <input type="radio" name="sortType" class="comboboxItem" value="Phone number" id="sort-relevance5"><label for="sort-relevance5">Phone number</label>
            </div>
        </div>
        <div class="SearchBox">
            <input type="text" class="Search" placeholder="Search" />
            <span class="iconify Search_icon" data-inline="false" data-icon="ant-design:search-outlined"></span>
        </div>
        <div class="Tools">
            <div class="ToolConteiner">
                <button class="Toolbuttons">
                    <span class="iconify Tool_icon_color" data-icon="dashicons:database-add" data-inline="false"></span>
                </button>
                <p class="text_in_button">
                    Add
                </p>
            </div>
            <div class="ToolConteiner">
                <button class="Toolbuttons">
                    <span class="iconify Tool_icon_color" data-icon="ant-design:edit-outlined" data-inline="false"></span>
                </button>
                <p class="text_in_button">
                    Edit
                </p>
            </div>
            <div class="ToolConteiner">
                <button class="Toolbuttons">
                    <span class="iconify Tool_icon_color" data-icon="ant-design:delete-outlined" data-inline="false"></span>
                </button>
                <p class="text_in_button">
                    Delete
                </p>

            </div>
            <div class="ToolConteiner">
                <button class="Toolbuttons">
                    <span class="iconify Tool_icon_color Tool_convert" data-icon="codicon:save-as" data-inline="false"></span>
                </button>
                <p class="text_in_button">
                    Convert to
                </p>
            </div>
        </div>
    </div>
    <div class="toolsdiv">
    </div>
</div>

<p>
    <a asp-action="Create">Add New Vehicles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufactureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuelConsumption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufactureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelConsumption)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
